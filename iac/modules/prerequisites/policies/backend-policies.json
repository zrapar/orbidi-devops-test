{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:ListAllMyBuckets",
        "s3:ListMultipartUploadParts",
        "s3:ListTagsForResource",
        "s3:DescribeJob",
        "s3:GetAccessPoint",
        "s3:GetBucketAcl",
        "s3:GetBucketCORS",
        "s3:GetBucketLocation",
        "s3:GetBucketPolicy",
        "s3:GetBucketPolicyStatus",
        "s3:GetBucketPublicAccessBlock",
        "s3:GetBucketTagging",
        "s3:GetBucketWebsite",
        "s3:GetDataAccess",
        "s3:GetObject",
        "s3:GetObjectAcl",
        "s3:GetObjectAttributes",
        "s3:GetObjectTagging",
        "s3:GetObjectVersion",
        "s3:CreateBucket",
        "s3:CreateBucketMetadataTableConfiguration",
        "s3:DeleteBucket",
        "s3:DeleteBucketMetadataTableConfiguration",
        "s3:DeleteBucketWebsite",
        "s3:DeleteObject",
        "s3:DeleteObjectVersion",
        "s3:PutBucketCORS",
        "s3:PutBucketLogging",
        "s3:PutObject",
        "s3:PutObjectLegalHold",
        "s3:ReplicateDelete",
        "s3:ReplicateObject",
        "s3:RestoreObject",
        "s3:DeleteBucketPolicy",
        "s3:ObjectOwnerOverrideToBucketOwner",
        "s3:PutBucketAcl",
        "s3:PutBucketPolicy",
        "s3:PutObjectAcl",
        "s3:PutObjectVersionAcl",
        "s3:PutObjectTagging",
        "s3:PutObjectVersionTagging",
        "s3:TagResource",
        "s3:UntagResource"
      ],
      "Resource": [
        "arn:aws:s3:::${S3_NAME}",
        "arn:aws:s3:${AWS_REGION}:${AWS_ACCOUNT_ID}:access-grants/default",
        "arn:aws:s3:${AWS_REGION}:${AWS_ACCOUNT_ID}:storage-lens-group/*",
        "arn:aws:s3:${AWS_REGION}:${AWS_ACCOUNT_ID}:accesspoint/*",
        "arn:aws:s3:${AWS_REGION}:${AWS_ACCOUNT_ID}:access-grants/default/location/*",
        "arn:aws:s3:${AWS_REGION}:${AWS_ACCOUNT_ID}:job/*",
        "arn:aws:s3:${AWS_REGION}:${AWS_ACCOUNT_ID}:access-grants/default/grant/*",
        "arn:aws:s3:::${S3_NAME}/*"
      ]
    },
    {
      "Sid": "DynamoDB",
      "Effect": "Allow",
      "Action": [
        "dynamodb:ListTables",
        "dynamodb:DescribeGlobalTable",
        "dynamodb:DescribeGlobalTableSettings",
        "dynamodb:DescribeTable",
        "dynamodb:GetItem",
        "dynamodb:GetRecords",
        "dynamodb:ListStreams",
        "dynamodb:ListTagsOfResource",
        "dynamodb:CreateGlobalTable",
        "dynamodb:CreateTable",
        "dynamodb:CreateTableReplica",
        "dynamodb:DeleteItem",
        "dynamodb:DeleteTable",
        "dynamodb:DeleteTableReplica",
        "dynamodb:ImportTable",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:UpdateGlobalTable",
        "dynamodb:UpdateTable",
        "dynamodb:DeleteResourcePolicy",
        "dynamodb:PutResourcePolicy",
        "dynamodb:TagResource",
        "dynamodb:UntagResource"
      ],
      "Resource": [
        "arn:aws:dynamodb:${AWS_REGION}:${AWS_ACCOUNT_ID}:table/*/stream/*",
        "arn:aws:dynamodb::${AWS_ACCOUNT_ID}:global-table/*",
        "arn:aws:dynamodb:${AWS_REGION}:${AWS_ACCOUNT_ID}:table/*"
      ]
    }
  ]
}
