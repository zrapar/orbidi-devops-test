{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "RDS",
      "Effect": "Allow",
      "Action": [
        "rds:DescribeCertificates",
        "rds:DescribeDBClusters",
        "rds:DescribeDBInstances",
        "rds:DescribeDBParameters",
        "rds:DescribeDBSubnetGroups",
        "rds:DescribeEngineDefaultParameters",
        "rds:DescribeEvents",
        "rds:DescribeIntegrations",
        "rds:DescribeOptionGroupOptions",
        "rds:DescribeOptionGroups",
        "rds:ListTagsForResource",
        "rds:AddRoleToDBCluster",
        "rds:AddRoleToDBInstance",
        "rds:CreateDBCluster",
        "rds:CreateDBClusterEndpoint",
        "rds:CreateDBClusterParameterGroup",
        "rds:CreateDBInstance",
        "rds:CreateDBParameterGroup",
        "rds:CreateDBSecurityGroup",
        "rds:CreateDBSubnetGroup",
        "rds:CreateOptionGroup",
        "rds:DeleteDBCluster",
        "rds:DeleteDBClusterEndpoint",
        "rds:DeleteDBInstance",
        "rds:DeleteDBSecurityGroup",
        "rds:DeleteDBSubnetGroup",
        "rds:DeleteGlobalCluster",
        "rds:DeleteOptionGroup",
        "rds:EnableHttpEndpoint",
        "rds:DisableHttpEndpoint",
        "rds:ModifyDBCluster",
        "rds:ModifyCurrentDBClusterCapacity",
        "rds:ModifyCustomDBEngineVersion",
        "rds:ModifyDBClusterEndpoint",
        "rds:ModifyDBInstance",
        "rds:ModifyDBParameterGroup",
        "rds:ModifyDBSubnetGroup",
        "rds:ModifyOptionGroup",
        "rds:RebootDBCluster",
        "rds:RebootDBInstance",
        "rds:RemoveFromGlobalCluster",
        "rds:RemoveRoleFromDBCluster",
        "rds:RemoveRoleFromDBInstance",
        "rds:StartDBInstance",
        "rds:StartDBCluster",
        "rds:StopDBCluster",
        "rds:StopDBInstance",
        "rds:AuthorizeDBSecurityGroupIngress",
        "rds:AddTagsToResource",
        "rds:RemoveTagsFromResource"
      ],
      "Resource": [
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:cluster:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:cluster-endpoint:*",
        "arn:aws:rds::${AWS_ACCOUNT_ID}:global-cluster:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:shard-group:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:es:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:secgrp:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:db-proxy:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:db-proxy-endpoint:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:cluster-snapshot:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:cev:*/*/*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:pg:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:ri:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:og:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:integration:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:subgrp:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:cluster-pg:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:target-group:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:tenant-database:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:snapshot-tenant-database:*:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:db:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:snapshot:*",
        "arn:aws:rds:${AWS_REGION}:${AWS_ACCOUNT_ID}:deployment:*"
      ]
    },
    {
      "Sid": "SecretManager",
      "Effect": "Allow",
      "Action": ["secretsmanager:*Secret", "secretsmanager:*Secret*", "secretsmanager:TagResource", "secretsmanager:GetResourcePolicy"],
      "Resource": ["*"]
    }
  ]
}
